<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.bluejack17_2.lamigo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logolamigo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logolamigo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
                  android:launchMode="singleTask"/>
        <activity
            android:name=".ThreadActivity"
            android:label="@string/title_activity_thread"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".ForumActivity"
            android:label="@string/title_activity_forum"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
    </application>

</manifest>